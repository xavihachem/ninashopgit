{
  "apps": [
    {
      "name": "ninashop-api",
      "script": "./server/server.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "logs/err.log",
      "out_file": "logs/out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    }
  ]
}
